doctype html
html
  head
    meta(charset='utf-8')
  body
    h1
      a(href='/home/'+user.id) Home
    h2
      a(href='/topic') 게시판
    artcle
      form(action='/topic/'+topic.id+'/edit' method='post')
        p
          input(type='text' value=topic.title placeholder='title' name='title')
        p
          textarea(name='content' placeholder='description')
            =topic.content
        p
          div= 'by '+topic.author
        p
          input(type='submit' value='수정')
    ul
      li
        a(href='/topic/add') add
