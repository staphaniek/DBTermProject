doctype html
html
  head
    meta(charset='utf-8')
  style.
    table {
      border: 1px solid #444444;
      border-collapse: collapse;
    }
    tr, td {
      border: 1px solid #444444;
    }
  body
    h1
      a(href='/home/'+user.id) Home
    h2
      a(href='/team') 팀 목록
    table
      tr
        td(align='center') 팀 번호
        td(align='center') 팀명
        td(align='center') 팀원1
        td(align='center') 팀원2
        td(align='center') 팀원3
      each team in teams
        tr
          td(align='center')= team.teamid
          td(align='center')= team.teamname
          td(align='center')= team.team_member1
          td(align='center')= team.team_member2
          td(align='center')= team.team_member3
          if user.user_level >3
            td
              a(href='/team/'+team.teamid+'/delete') 삭제
    a(href='/team/add') 팀 추가
